<Window xmlns:Views="clr-namespace:deneme.Views"  x:Class="deneme.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:deneme"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Height="100" Width="200" Orientation="Horizontal" >
            <StackPanel>
                <Label Content="Kullanıcı Maili:"/>
                <Label Content="Şifre:"/>
                <Button x:Name="btnNewUser" Content="Kayıt ol" Margin="5,0" Click="BtnNewUser_Click" />
            </StackPanel>
            <StackPanel Width="115">
                <TextBox  Name="txtID" Margin="0,5"/>
                <PasswordBox  Name="txtPassword" Margin="0,2"/>
                <Button x:Name="btnGo" Content="Giriş Yap" Margin="20,2" Click="BtnGo_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
